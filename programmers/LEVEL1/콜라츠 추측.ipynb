    "def solution(num):\n",
    "    cnt = 0\n",
    "    while num > 1:\n",
    "        if num % 2 == 0:\n",
    "            num = num // 2\n",
    "            cnt += 1\n",
    "        else:\n",
    "            num = (num  * 3) + 1\n",
    "            cnt += 1\n",
    "            \n",
    "        if cnt > 500:\n",
    "            return -1\n",
    "    \n",
    "    return cnt\n",
    "\n",
    "solution(6)"
   ]
  }
